rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admin SDK access (server-side)
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Content collections
    match /system/{document} {
      allow read, write: if true;
    }
    
    match /content/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}